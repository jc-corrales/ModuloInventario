						<attributes/>
						<firstStatus/>
						<secondStatus/>
					</ObjectListItem>
					<ObjectListItem intro="" title="Pedidos pendientes por revisar" number="" numberUnit="" numberState="None" type="Active" selected="false"
						showMarkers="false">
						<attributes/>
						<firstStatus/>
						<secondStatus/>
					</ObjectListItem>
					<ObjectListItem intro="" title="Últimos pedidos entregados" number="" numberUnit="" numberState="None" type="Active" selected="false"
						showMarkers="false">
						<attributes/>
						<firstStatus/>
						<secondStatus/>
					</ObjectListItem>
					<ObjectListItem intro="" title="Pedidos pendientes entregar" number="" numberUnit="" numberState="None" type="Active" selected="false"
						showMarkers="false">
						<attributes/>
						<firstStatus/>
						<secondStatus/>
					</ObjectListItem>
					<ObjectListItem intro="" title="Todos los pedidos" number="" numberUnit="" numberState="None" type="Active" selected="false"
						showMarkers="false">
						<attributes/>
						<firstStatus/>
						<secondStatus/>
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content/>
			</OverflowToolbar>
		</footer>
		<headerContent/>
	</Page>
</mvc:View>